{
  "name": "My Extension",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "128": "./img/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./components/content.js"],
      "css": ["./components/content.module.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "scripting",
    "webNavigation",
    "webRequest",
    "tabs"
  ],

  "action": {
    "default_popup": "./pages/popup.html",
    "default_title": "My Extension"
  },
  "background": {
  }
}
